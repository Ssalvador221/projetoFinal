<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background3"
    android:orientation="vertical"
    tools:context=".thirdFragment" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginStart="15dp"
            android:text="Minhas Festas"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="1dp">
            <Button
                android:id="@+id/addfesta"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:background="@drawable/ic_baseline_add_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="Adicionar Festa"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold|normal" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_add1" />

                <include layout="@layout/item_add2" />

                <include layout="@layout/item_add3" />

                <include layout="@layout/item_add4" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>